package health.diseases;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import health.db.Provider;
import health.patient.PatientUsers;

public class DiseaseDao {
	public static int check(PatientUsers u) 
	{
		int status= 0 ;
		try 
		{
			Connection con = Provider.getConnection();	
			String sql = "select disease from check where precautions=? or precautions=? or precautions=?";
			PreparedStatement pst = con.prepareStatement(sql);
			pst.setString(1, u.getUserid());
			pst.setString(2, u.getPassword());
			ResultSet rs = pst.executeQuery();
			if(rs.next())
				status = 1;
			
		} 
		catch (Exception e) 
		{
			e.printStackTrace();
		}
		return status;
	}
}
